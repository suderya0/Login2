 <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Map Page</title>

        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
        crossorigin=""/>

        <!-- Make sure you put this AFTER Leaflet's CSS -->
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>


        <style>
            #map3 { height: 700px; }
        </style>
    </head>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
    crossorigin=""></script>

    <body>
        <div id="map3"></div>
        <p id="coordinates"></p>
        <script>
            
            var map = L.map('map3');
            map.setView([51.505, -0.09], 13);

            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
            }).addTo(map);

            navigator.geolocation.getCurrentPosition(success, error);

            function success(pos) {
                const lat = pos.coords.latitude;
                const lng = pos.coords.longitude;
                const accuracy = pos.coords.accuracy;

                let marker = L.marker([lat, lng]).addTo(map);
                let circle = L.circle([lat, lng], { radius: accuracy }).addTo(map);

                map.setView([lat, lng], 13);
            }

            function error(err) {
                if (err.code === 1) {
                    alert("Please allow geolocation address");
                } else {
                    alert("Cannot get location");
                }
            }


    let ankaraLocation = { lat: 38.4192, lng: 27.1287 };
    let ankaraMarker = L.marker([ankaraLocation.lat, ankaraLocation.lng]).addTo(map);
    ankaraMarker.bindPopup("<b>Ayse- Voleybol</b><br>").openPopup();

        let marmarisLocation = { lat: 38.4192, lng: 27.1287 };
    let marmarisMarker = L.marker([marmarisLocation.lat, marmarisLocation.lng]).addTo(map);
    marmarisMarker.bindPopup("<b>Zeynep- Voleybol-Tenis</b><br>").openPopup();


        </script>

    </body>
    </html>
